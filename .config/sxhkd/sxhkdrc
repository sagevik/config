# monitor
super + control + alt + p
    monitorsetup

super + alt + p
    displayselect

# clients
super + shift + p
    clients

# lock
super + alt + BackSpace
    pow

super + r ; {r, w, c}
    {rofi -show drun, rofi -show window, rofi -show combi}

super + alt + o ; {f, b, c, v, g, j}
    {nemo, brave, qalculate-gtk, vmselector, gimp, joplin-desktop}

# Screenshot
{_, shift +, control +}Print
    {scrshot "selection", scrshot "window", scrshot "fullscreen"}

# Volume settings
XF86AudioRaiseVolume
    volume "up"

XF86AudioLowerVolume
    volume "down"

XF86AudioMute
    volume "mute"

super + XF86AudioMute
    volume "setvolume"


# Screen brightness
XF86MonBrightnessUp
    brightness "up"

XF86MonBrightnessDown
    brightness "down"

XF86Display
    displayselect

# bookmark
Insert
    snippet "set"

super + Insert
    snippet "get"

super + alt + Insert
    snippet

