# monitor
super + control + alt + p
    monitorsetup

super + alt + p
    displayselect

# clients
super + shift + p
    clients

# Powermenu
super + control + alt + l
    pow

# Rofi
super + r ; {r, w, c}
    {rofi -show drun, rofi -show window, rofi -show combi}

super + alt + b ; {b, c}
    {brave, chromium}

super + alt + o ; {f, c, w}
    {nemo, qalculate-gtk, vmselector}

# Screenshot
Print
    scrshot

# Volume settings
XF86AudioRaiseVolume
    rs_volume "up"

XF86AudioLowerVolume
    rs_volume "down"

XF86AudioMute
    rs_volume "mute"

super + XF86AudioMute
    rs_volume "setvolume"

# Screen brightness
XF86MonBrightnessUp
    rs_brightness "up"

XF86MonBrightnessDown
    rs_brightness "down"

XF86Display
    displayselect


